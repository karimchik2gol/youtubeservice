<% youtubeinfoid=YoutubeInfoId.find(session[:youtube_info_id]) %>
<% check_action=params[:action]=="registration" %>
<div class="registration-form">
	<% unless session[:user_id] %><h3>Расскажите о себе <%= @user.email %></h3><% end %>
	<div class="wrap-form-fields">
			<%= form_for(@user, :url=>@url) do |f| %>
			  <% if @user.errors.any? %>
			    <div id="error_explanation">
			      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

			      <ul>
			      <% @user.errors.full_messages.each do |msg| %>
			        <li><%= msg %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>

			<div class="wrap-hint-and-fields">
				<div class="form-fields">
				  <div class="field">
				    <%= f.label :email, "E-mail: *" %><br />
				    <%= f.text_field :email %>
				  </div>
				  <div class="field">
				    <%= f.label :phone, "Телефон: *" %><br />
				    <%= f.text_field :phone %>
				  </div>
				  <div class="field">
				    <%= f.label :city, "Город: *" %><br />
				    <%= f.text_field :city %>
				  </div>
				  <div class="field">
					   <%= f.label :category, "Категории:* (минимум две)" %><br />
					   <%= f.hidden_field :category, :class=>"hidden_category" %>
					   <div class="category_section">
					    <% if @user.category && @user.category.include?(",") %>
					     <% @user.category.split(",").each do |f| %>
					      <% id=f.gsub("id", "") %>
					      <% category=Category.find(id.to_i) %>
					      <span class='selected-category-item' data-id='<%= id %>'><span class='category-label-section'><%= category.name %></span> <span class='destroy-category' onclick='destroy_category(this)'>X</span> </span>
					     <% end %>
					    <% end %>
					   </div>
					   <div class="select-category">
					    <select>
					     <% Category.all.each do |f| %>
					     	<option value="<%= f.id %>"><%= f.name %></option>
					     <% end %>
					    </select>
					    <button class="add-category">Добавить</button>
					   </div>
				  </div>
				  <div class="field">
				  		<input type="checkbox" <% if youtubeinfoid.open_to_other_types_sponsor || check_action %>checked<% end %> name="anketa[channel_size_limit]">
					   	<span>Запретить контактировать каналам, у которых в 10 раз меньше подписчиков</span>
				  </div>
				</div>
				<div class="hint">
					<% youtubeinfoid=YoutubeInfoId.find(session[:youtube_info_id]) %>
					<h3><%= youtubeinfoid.name %>,</h3>
					<p>
						Your direct contact information will NEVER be shared with any 3rd parties.
						All messages/offers will always come securely through the site.
					</p>
				</div>
				  
			</div>
			  <div class="first-block wrap-checkbox">
			  	  <h4>Какой тип сотрудничества вас интересует?</h4>
				  <div class="field">
				  		<input type="checkbox" <% if youtubeinfoid.create_videos || check_action %>checked<% end %> name="anketa[create_videos]">
				    	<span>Создание видео вместе</span>
				  </div>
				  <div class="field">
				  		<input type="checkbox" <% if youtubeinfoid.making_channel_toghether || check_action %>checked<% end %> name="anketa[making_channel_toghether]">
				    	<span>Создание нового канала вместе с видеозаписями каждого сотрудника(каждый человек контролирует определенный день недели)</span>
				  </div>
				  <div class="field">
				  		<input type="checkbox" <% if youtubeinfoid.cross_promotions_and_email_lists || check_action %>checked<% end %> name="anketa[cross_promotions_and_email_lists]">
				    	<span>Продвижения с помощью друг друга(без YouTube) социальные сети, сайты, e-mail рассылка</span>
				  </div>
				  <div class="field">
				  		<input type="checkbox" <% if youtubeinfoid.recommended_channel_swapping || check_action %>checked<% end %> name="anketa[recommended_channel_swapping]">
				    	<span>Обмен "Рекомендованные каналы" на YouTube</span>
				  </div>
				  <div class="field">
				  		<input type="checkbox" <% if youtubeinfoid.annotation_or_end_card_or_link_swapping || check_action %>checked<% end %> name="anketa[annotation_or_end_card_or_link_swapping]">
				    	<span>Обмен ссылками на канал в описании</span>
				  </div>
				  <div class="field">
				  		<input type="checkbox" <% if youtubeinfoid.open_to_other_types || check_action %>checked<% end %> name="anketa[open_to_other_types]">
				    	<span>Открыт к другим видам сотрудничества</span>
				  </div>
				  <div class="field not-interested">
				  	<input type="checkbox" class="signup-form-not_interested" name="not_interested">
				  	<span>Ничего не интересует</span>
				  </div>
			  </div>

			  <div class="second-block wrap-checkbox">
			  	  <h4>Какие услуги вы готовы предоставить?</h4>
				  <div class="field">
				  		<input type="checkbox" <% if youtubeinfoid.brand_product_integration || check_action %>checked<% end %> name="anketa[brand_product_integration]">
					   	<span>Интеграция бренда/продукта в ваши видео</span>
				  </div>
				  <div class="field">
				  		<input type="checkbox" <% if youtubeinfoid.product_reviews || check_action %>checked<% end %> name="anketa[product_reviews]">
					   	<span>Отзывы о продуктах</span>
				  </div>
				  <div class="field">
				  		<input type="checkbox" <% if youtubeinfoid.dedicated_videos || check_action %>checked<% end %> name="anketa[dedicated_videos]">
					   	<span>Выделенное количество видео про бренд</span>
				  </div>
				  <div class="field">
				  		<input type="checkbox" <% if youtubeinfoid.revenue_affiliate || check_action %>checked<% end %> name="anketa[revenue_affiliate]">
					   	<span>Вы получаете процент от выручки(зачастую не предоплата)</span>
				  </div>
				  <div class="field">
				  		<input type="checkbox" <% if youtubeinfoid.spokesperson || check_action %>checked<% end %> name="anketa[spokesperson]">
					   	<span>Докладчик</span>
				  </div>
				  <div class="field">
				  		<input type="checkbox" <% if youtubeinfoid.offyoutube_promotion || check_action %>checked<% end %> name="anketa[offyoutube_promotion]">
					   	<span>Продвижение вне YouTube(сайт, соц. сети)</span>
				  </div>
				  <div class="field">
				  		<input type="checkbox" <% if youtubeinfoid.including_brand_videos || check_action %>checked<% end %> name="anketa[including_brand_videos]">
					   	<span>Добавление видео про бренд/продукт в плейлист</span>
				  </div>
				  <div class="field">
				  		<input type="checkbox" <% if youtubeinfoid.open_to_other_types_sponsor || check_action %>checked<% end %> name="anketa[open_to_other_types_sponsor]">
					   	<span>Открыт к другим видам услуг</span>
				  </div>
				  <div class="field not-interested">
				  	<input type="checkbox" class="signup-form-not_interested" name="not_interested">
				  	<span>Ничего не интересует</span>
				  </div>
			  </div>
			  <div class="actions">
			    <%= submit_tag("Зарегистрироваться") %>
			  </div>
			<% end %>
	</div>
</div>

<script type="text/javascript">
	$(".signup-form-not_interested").change(function(){
		$(this).parents(".wrap-checkbox").find("input[type='checkbox']").removeAttr("checked");
		$(this).prop('checked', true);
	})

	$("input[type='checkbox']").change(function(){
		if($(this).attr("class")!="signup-form-not_interested"){
			$(this).parents(".wrap-checkbox").find(".signup-form-not_interested").prop('checked', false);
		}
	})

	<% if params[:action]=="account" %>
		upd_url="/account"
	<% else %>
		upd_url="/"
	<% end %>

	$("input[type='submit']").click(function(e){
		e.preventDefault();
		$.ajax({
	          async: true,
	          type: "POST",
	          dataType: 'json',
	          url: "<%= @url %>",
	          data: $("form").serialize(), 
	          success: function(data){
	          	if(data)
	          		add_errors("#user_", data);
	          	else
	          		window.location=upd_url;
	          }
	    });
	})

</script>