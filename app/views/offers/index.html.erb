<h1>Listing offers</h1>

<table>
  <tr>
    <th>Project type</th>
    <th>Name</th>
    <th>Description</th>
    <th>Application deadline</th>
    <th>Targe audience geos</th>
    <th>Location dependent</th>
    <th>Location dependent boolean</th>
    <th>Target channel categories</th>
    <th>Subscriber range</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%= offer.project_type %></td>
    <td><%= offer.name %></td>
    <td><%= offer.description %></td>
    <td><%= offer.application_deadline %></td>
    <td><%= offer.targe_audience_geos %></td>
    <td><%= offer.location_dependent %></td>
    <td><%= offer.location_dependent_boolean %></td>
    <td><%= offer.target_channel_categories %></td>
    <td><%= offer.subscriber_range %></td>
    <td><%= link_to 'Show', offer %></td>
    <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
    <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

